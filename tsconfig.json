{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "./src/typings.d.ts",
      "node_modules/@types"
    ],
    "paths": {
      "@custom/*": ["./app/@custom/*"],
      "@shared/*": ["./app/@shared/*"],
      "app/*": ["./app/*"],
      "jszip": [
        "../node_modules/jszip/dist/jszip.min.js"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
